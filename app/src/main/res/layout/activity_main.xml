<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.datafrominternet.MainActivity">

    <RadioGroup
        android:id="@+id/radioCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonUsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="US Dollar (USD)" />

        <RadioButton
            android:id="@+id/radioButtonEur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Euro (EUR)" />

        <RadioButton
            android:id="@+id/radioButtonBtc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bit Coin (BTC)" />

        <RadioButton
            android:id="@+id/radioButtonEth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ethereum (ETH)" />

        <RadioButton
            android:id="@+id/radioButtonXrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ripple (XRP)" />
    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_price_search_results_json"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </ScrollView>

    <TextView
        android:id="@+id/usd_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="US Dollar (USD) Value:" />

    <TextView
        android:id="@+id/eur_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Euro (EUR) Value:" />

    <TextView
        android:id="@+id/btc_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Bit Coin (BTC) Value:" />

    <TextView
        android:id="@+id/eth_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Ethereum (ETH) Value:" />

    <TextView
        android:id="@+id/xrp_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Ripple (XRP) Value:" />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>